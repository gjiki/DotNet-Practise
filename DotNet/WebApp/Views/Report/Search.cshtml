@model WebApp.Models.Period

@{
    ViewData["Title"] = "Search transactions";
}

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Report" asp-action="Index">Back to reports</a>
</p>

<form asp-controller="Report" asp-acion="Search" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate" class="form-control" placeholder="StartDate">
            <span asp-validation-for="StartDate"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" placeholder="EndDate">
            <span asp-validation-for="EndDate"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>