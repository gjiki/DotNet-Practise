@model WebApp.Models.Operation

@{
    ViewData["Title"] = "Add Operation";
}

    <link rel="stylesheet" href="~/css/style.css" type="text/css" />

    <form asp-controller="Calculator" asp-acion="Add" method="post" class="mt-3">
        <div class="operation">
            <div class="form-group-row">
                <div>
                    <label asp-for="FromCurrency" class="col-sm-2 col-form-label">From</label>
                </div>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.FromCurrency, ViewBag.UniqueCurrencies as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FromCurrency, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group-row">
                <div>
                    <label asp-for="ToCurrency" class="col-sm-2 col-form-label">To</label>
                </div>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.ToCurrency, ViewBag.UniqueCurrencies as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ToCurrency, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group-row">
                <div>
                    <label asp-for="Rate" class="col-sm-2 col-form-label"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Rate" class="form-control" placeholder="Rate">
                    <span asp-validation-for="Rate"></span>
                </div>
            </div>

            <div class="form-group-row">
                <div>
                    <label asp-for="BuyAmount" class="col-sm-2 col-form-label">Buy</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="BuyAmount" class="form-control" placeholder="BuyAmount">
                    <span asp-validation-for="BuyAmount"></span>
                </div>
            </div>

            <div class="form-group-row">
                <div>
                    <label asp-for="SellAmount" class="col-sm-2 col-form-label">Sell</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="SellAmount" class="form-control" placeholder="SellAmount">
                    <span asp-validation-for="SellAmount"></span>
                </div>
            </div>

            <div class="form-group-row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>