@model WebApp.Models.Operation

@{
    ViewData["Title"] = "Add Operation";
}

<script src="~/js/script.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/css/style.css" type="text/css" />

<form asp-controller="Calculator" asp-acion="Add" method="post" class="mt-3">
    <div class="operation">
        <div class="form-group-row">
            <div>
                <label asp-for="FromCurrency" class="col-sm-2 col-form-label">From</label>
            </div>
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.FromCurrency, ViewBag.UniqueCurrenciesFromCalculator as SelectList, new { @class = "form-control", @id = "fromCurrencyElem" })
                @Html.ValidationMessageFor(model => model.FromCurrency, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-row">
            <div>
                <label asp-for="ToCurrency" class="col-sm-2 col-form-label">To</label>
            </div>
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.ToCurrency, ViewBag.UniqueCurrenciesFromCalculator as SelectList, new { @class = "form-control", @id = "toCurrencyElem" })
                @Html.ValidationMessageFor(model => model.ToCurrency, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-row">
            <div>
                <label class="col-sm-2 col-form-label">Rate</label>
            </div>
            <div class="col-sm-10">
                <input class="form-control" id="rateInput" placeholder="Rate">
            </div>
        </div>

        <div class="form-group-row">
            <div>
                <label asp-for="BuyAmount" class="col-sm-2 col-form-label">Buy</label>
            </div>
            <div class="col-sm-10">
                <input asp-for="BuyAmount" class="form-control" placeholder="BuyAmount" id="buyAmountInput">
                <span asp-validation-for="BuyAmount"></span>
            </div>
        </div>

        <div class="form-group-row">
            <div>
                <label asp-for="SellAmount" class="col-sm-2 col-form-label">Sell</label>
            </div>
            <div class="col-sm-10">
                <input asp-for="SellAmount" class="form-control" placeholder="SellAmount" id="sellAmountInput">
                <span asp-validation-for="SellAmount"></span>
            </div>
        </div>

        <div class="form-group-row">
            <div>
                <label asp-for="Comment" class="col-sm-2 col-form-label">Comment</label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Comment" class="form-control" placeholder="Comment" id="commentInput">
                <span asp-validation-for="Comment"></span>
            </div>
        </div>

        <div class="form-group-row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" id="submitOperation">Save</button>
            </div>
        </div>
    </div>
</form>